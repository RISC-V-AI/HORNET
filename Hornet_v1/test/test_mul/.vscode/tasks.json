{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run-c",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "gcc ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
